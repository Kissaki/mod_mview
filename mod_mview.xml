<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.6.0">
	<name>mod_mview</name>
	<author>KCode</author>
	<creationDate>2011</creationDate>
	<authorUrl>http://kcode.de</authorUrl>
	<version>1.6.0</version>
	<description>Joomla module for MView</description>
	<files>
		<filename>mod_mview.xml</filename>
		<filename module="mod_mview">mod_mview.php</filename>
		<folder>tmpl</folder>
		<folder>libs</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="jsoncallbackurl" type="text" label="CallbackURL"
					description="URL to the json callback. Example: http://mumble.example.com/?view=json&amp;serverId=1&amp;callback=?">
				</field>
				<field name="refreshinterval" type="text" default="30" label="Refresh Interval" description="">
				</field>
			</fieldset>
		</fields>
	</config>
</install>
